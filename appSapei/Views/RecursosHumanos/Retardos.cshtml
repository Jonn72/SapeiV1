<script type="text/javascript">

    $("#btnBuscar1").click(function Nuevo(evento) {
        RegresaPersonalDatos($("#cboPersonal").val());
        evento.preventDefault();
    });

    function RegresaPersonalDatos(ID) {
        Cargar(ID);
    }

    function Cargar(ID) {
        $.ajax({
            url: '../../../../RecursosHumanos/RegresaDatosPersonalRetardo',
            type: 'POST',
            dataType: 'json',
            data: { psID: ID }
        })
            .done(function (data) {
                if (typeof (data.Success) !== "undefined" && !data.Success) {

                    MensajesToastr("warning", "Solicitud Procesada", " El personal no se encuentra registrado");

                }
                else {
                    var resultado = JSON.parse(data);
                    $("#divRFC").hide();
                    $("#tabla").hide();
                    $("#main").show();

                    $("#txtNombre").val(resultado.data[0].nombre_empleado);
                    $("#txtNumTarjeta").val(resultado.data[0].no_tarjeta);
                    $("#txtTipoContrato").val(resultado.data[0].tipo_contrato);
                    $("#txtDepto").val(resultado.data[0].descripcion_area);
                    $("#txtDescripcionPuesto").val(resultado.data[0].descripcion_puesto);
                    $("#txtPeriodoInicio").val(resultado.data[0].periodo_inicio);
                    $("#txtPeriodoFin").val(resultado.data[0].periodo_fin);
                    $("#hidID").val(ID);

                }
            })
            .fail(function (data) {
                MensajesToastrErrorConexion();
            });
    }

    $('#txtFechaRetardo').datetimepicker({
        viewMode: 'days',
        format: 'DD/MM/YYYY',
        locale: 'es',
        defaultDate: 'now'
    });

    $("#btnGuardar2").click(function Nuevo(evento) {
        var ID = $("#hidID").val();
        var FechaRetardo = $("#txtFechaRetardo").val();
        var HorasRetardo = $("#txtHorasRetardo").val();

        $.ajax({
            asyn: false,
            url: '../../../RecursosHumanos/GuardaRetardo',
            type: 'POST',
            dataType: 'json',
            data: { psID: ID, psFechaRetardo: FechaRetardo, psHoraRetardo: HorasRetardo },
        })
            .done(function (data) {

                if (typeof (data.Success) === "undefined" || !data.Success) {

                    MensajesToastr("error", "Solicitud Procesada", "Error al Guardar");

                }
                else {
                    MensajesToastr("success", "Solicitud Procesada", "Registro Correcto");
                    $('#BodyPrincipal').load('../../../../RecursosHumanos/Retardos');
                }
            })
            .fail(function (data) {
                MensajesToastrErrorConexion();
            });

        event.preventDefault();
    });

    function Eliminar(id) {
        var opcion = confirm("Esta Seguro(a) que desea eliminar este retardo?");
        if (opcion == true) {
            $.ajax({
                asyn: false,
                url: '../../../RecursosHumanos/EliminarRetardo',
                type: 'POST',
                dataType: 'json',
                data: { psIDRetardo: id },
            })
                .done(function (data) {

                    if (typeof (data.Success) === "undefined" || !data.Success) {
                        MensajesToastr("error", "Solicitud Procesada", "Error al Guardar");
                    }
                    else {
                        MensajesToastr("success", "Solicitud Procesada", "Registro Eliminado");
                        $('#BodyPrincipal').load('../../../../RecursosHumanos/Retardos');
                    }
                })
                .fail(function (data) {
                    MensajesToastrErrorConexion();
                });

            event.preventDefault();
        }
    }

    function Cancelar() {
        $('#BodyPrincipal').load('../../../../RecursosHumanos/Retardos');
        evento.preventDefault();
    }

</script>
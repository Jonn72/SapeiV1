                                <option value="Dep. de Comunicación y Difusión ">Dep. de Comunicación y Difusión</option>
                                <option value="Dep. de Gestión Tecnológica y Vinculación">Dep. de Gestión Tecnológica y Vinculación</option>
                                <option value="Dep. de Ing. Electrica y Electrónica">Dep. de Ing. Electrica y Electrónica</option>
                                <option value="Dep. de Mantenimiento y Equipo">Dep. de Mantenimiento y Equipo</option>
                                <option value="Dep. de Planeación y Programación">Dep. de Planeación y Programación</option>
                                <option value="Dep. de Servicios Escolares">Dep. de Servicios Escolares</option>
                                <option value="Dep. División de Estudios Profesionales">Dep. División de Estudios Profesionales</option>
                                <option value="Dep. Metal-Mecánica">Dep. Metal-Mecánica</option>
                                <option value="Dep. Recursos Financieros">Dep. Recursos Financieros</option>
                                <option value="Dep. Recursos Humanos">Dep. Recursos Humanos</option>
                                <option value="Dep. Sistemas y Computación">Dep. Sistemas y Computación</option>
                                <option value="Dep.Recursos Materiales y de Servicios">Dep.Recursos Materiales y de Servicios</option>
                                <option value="Desarrollo Académico">Desarrollo Académico</option>
                                <option value="Dirección">Dirección</option>
                                <option value="Ecotec">Ecotec</option>
                                <option value="Sistema de Gestión Integral de Igualdad y Equidad de Genero">Sistema de Gestión Integral de Igualdad y Equidad de Genero</option>
                                <option value="Sistema de Gestión Ambiental">Sistema de Gestión Ambiental</option>
                                <option value="Sub. de Planeación y Vinculación">Sub. de Planeación y Vinculación</option>
                                <option value="Sub. Servicios Admon">Sub. Servicios Admon</option>

@Html.Partial("../Generales/TablaGeneral")
@if (@ViewData["mensaje"]!=null)
{
<div class="alert alert-danger alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <strong>Alertar!</strong>  @ViewData["mensaje"].
</div>
}

<!-- Modal -->
<div class="modal fade" id="Valida_Asesoria" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmación de Asesoría</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmValidaAsesoria" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-group">
                        <h4>¿Deseas validar la siguiente asesoría?</h4>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <label>Número de control</label>
                            <input type="number" id="NoControltxt" class="form-control" disabled required />
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <label>Número de Asesoría</label>
                            <input type="number" class="form-control" id="NoAsesoriatxt" required disabled />
                        </div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" id="btnGuardar" class="btn btn-success">Aceptar</button>
                </form>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-info" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#BodyPrincipal" href="/Academicos/ControlEscolarRP">
    Regresar al menú
</a>
<script src="~/Scripts/ManejoDatos/Academicos/AsesoriasRP.js"></script>
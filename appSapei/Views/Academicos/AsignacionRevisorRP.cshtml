<!-- Modal -->
<div class="modal fade" id="AsignacionRevisor" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Asigna Docente (Interno)</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmAsignacionRevisor" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            Selecciona el Docente para el proyecto:
                            <input type="hidden" id="txtId" />
                            <input type="text" disabled class="form-control" id="txtProyecto" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            @{
                                if (ViewData["cboRfc"] != null)
                                {
                                    <select class="form-control" id="cboRfc">
                                        @foreach (System.Data.DataRow dr in (ViewData["cboRfc"] as System.Data.DataTable).Rows)
                                        {
                                            if (ViewData["cboRfcc"] != null)
                                            {
                                                if (@dr.ItemArray[0].ToString().Trim() == ViewData["cboRfcc"].ToString())
                                                {
                                                    <option value="@dr.ItemArray[0].ToString().Trim()" selected>@dr.ItemArray[1].ToString().Trim()</option>
                                                }
                                            }
                                            else
                                            {
                                                <option value="@dr.ItemArray[0].ToString().Trim()">@dr.ItemArray[1].ToString().Trim()</option>
                                            }

                                        }
                                    </select>
                                }
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="margin-top:10px">Cerrar</button>
                        <button type="submit" class="btn btn-primary" style="margin-top:10px">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="verDocente" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Revisor</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style=" margin-bottom: 50px;">
                <div class="form-group">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <label>El docente asignado es: </label>
                        <input type="text" id="txtNombre" class="form-control" disabled />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

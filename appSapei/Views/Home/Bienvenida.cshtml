@using Sapei.Framework.Utilerias;
<link rel="stylesheet" href="~/Content/themes/Tecnologico.css" />
<link rel="stylesheet" href="~/Content/themes/Bienvenida.css"/>


<div style="padding:15px;">
    <h2 align="center">Bienvenido(a) @SesionSapei.Sistema.Sesion.Usuario.Nombre</h2>
</div>

<!-- Ventana Emergente -->
@if (SesionSapei.Sistema.Sesion.Usuario.RolUsuario == Sapei.Framework.Configuracion.enmRolUsuario.ALU)
{
    <div id="modalBienvenida" class="modalbienvenida">
        <div class="modal-contenido">
            <span class="close-modal" onclick="cerrarModal()">&times;</span>
            <img src="~/Images/signoadmiracion.png" />
            <h3>¡Bienvenido Guardian!</h3>
            <p>Recuerda que debes mantener actualizados tus datos personales.</p>
            <p>Acude a Servicios Escolares para Verificarlos</p>

        </div>
    </div>

    <script>
        window.onload = function () {
            // Comprobacion para que el modal solo se muestre una vez por sesion
            if (!sessionStorage.getItem("modalMostrado")) {
                document.getElementById("modalBienvenida").style.display = "block";
                sessionStorage.setItem("modalMostrado", "true");
            }
        };

        function cerrarModal() {
            document.getElementById("modalBienvenida").style.display = "none";
        }
    </script>
}

<div class="row"></div>
<div class="row"></div>

<div class="col-md-12 col-sm-12 col-xs-12 center-block text-center">

    <div class="row">

        @{
            if (SesionSapei.Sistema.Sesion.Usuario.RolUsuario == Sapei.Framework.Configuracion.enmRolUsuario.ALU
                || SesionSapei.Sistema.Sesion.Usuario.RolUsuario == Sapei.Framework.Configuracion.enmRolUsuario.DOC)
            {
                <div class="row">
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <center>
                            <div class="div-img">
                                        <a class="img img-centro" data-ajax="true" data-ajax-method="GET"
                                           data-ajax-mode="replace" data-ajax-update="#BodyPrincipal"
                                           href="../../Generales/Tecnologico">
                                            <img src="~/Images/Tecnm.png" width="64%" height="64%" alt="" />
                                            <br />Conoce tu comunidad TecNM
                                        </a>
                            </div>
                        </center>

                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <center>
                            <div class="div-img">
                                <a class="img img-centro" target="_blank" href="https://sapei2.tlahuac.tecnm.mx">
                                    <img class="" src="~/Images/Sapei2.png" width="100%" height="60%" alt="" />
                                    <br />El Centro de Cómputo te invita a conocer la nueva versión de Sapei (ingresa con tu mismo usuario y contraseña)
                                </a>
                            </div>
                        </center>

                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <center>
                            <div class="div-img">
                                <a class="img" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#BodyPrincipal" href="../../Generales/PerfilUsuario">
                                    <img src="~/Images/PJaguar.png" class="img-centro" width="118%" height="118%" alt="" />
                                    <br />
                                    Conoce tu Perfil
                                </a>
                            </div>
                        </center>
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-12 col-sm-12 col-xs-12 center-block">
                    <center>
                        <div class="div-img">
                            <a class="img img-centro" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#BodyPrincipal" href="../../Generales/Tecnologico">
                                <img class="" src="~/Images/Tecnm.png" width="64%" height="64%" alt="" />
                                <br />Conoce tu comunidad TecNM
                            </a>
                        </div>
                    </center>
                </div>
            }
        }

    </div>
</div>

<div class="clearfix"></div>
<div class="x_panel">
     <div class="x_title">
          <form class="form-horizontal form-label-left" action="#" id="frmRegistroTarjetonVehicular" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
               <div id="divUsuario">
                    <div class="col-md-8 center-margin">
                         <label for="txtUsuario">Usuario</label>
                         <input type="text" class="form-control" id="txtUsuario" placeholder="No. de control o  RFC" required>
                    </div>
                    <div class="col-md-8 center-margin">
                         <label>Tipo de Vehículo a Registrar</label>
                         @{
                              if (ViewData["cboTipoVehiculo"] != null)
                              {
                                   <select class="form-control" id="cboTipoVehiculo">
                                        @foreach (System.Data.DataRow dr in (ViewData["cboTipoVehiculo"] as System.Data.DataTable).Rows)
                                        {
                                             <option value="@dr.ItemArray[0].ToString().Trim()">@dr.ItemArray[1].ToString().Trim()</option>
                                        }
                                   </select>
                              }
                         }
                         <div class="form-group">
                              <button id="btnContinuar" type="submit" class="btn btn-info">Continuar</button>
                         </div>
                    </div>
                    
               </div>

               <div id="divRegistro">
                    <div class="col-md-8 col-sm-8 col-xs-12 form-group">
                         <label>
                              Nombre
                         </label>
                         <input type="text" class="form-control" id="txtNombre" readonly disabled>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                         <label>
                              Placas
                         </label>
                         <input type="text" class="form-control" id="txtPlacas" readonly disabled>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                         <label>
                              Marca
                         </label>
                         <input type="text" class="form-control" id="txtMarca" readonly disabled>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                         <label>
                              Sub-Marca
                         </label>
                         <input type="text" class="form-control" id="txtSubMarca" readonly disabled>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                         <label>
                              Tarjeton
                         </label>
                         <input type="text" class="form-control" id="txtTarjeton" required>
                    </div>
                    <div class="form-group">
                         <button id="btnGuardar" type="submit" class="btn btn-info">Guardar</button>
                         <button id="btnCalcelar" type="submit" class="btn btn-alert">Cancelar</button>
                    </div>
               </div>
          </form>
     </div>
</div>
<script src="~/Scripts/ManejoDatos/Materiales/RegistroTarjetonVehicular.js"></script>
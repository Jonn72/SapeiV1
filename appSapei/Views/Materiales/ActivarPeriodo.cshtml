<div class="clearfix"></div>
<div class="x_panel">
     <form class="form-horizontal" action="#" id="frmPeriodosActividades" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
          <input type="hidden" id="hidPeriodo" value="@ViewData["txtPeriodo"]" />
          <h2 class="text-center">Registrar Fechas</h2>
          <div class="col-md-8 center-margin center-block">
               <label>
                    Periodo
               </label>
               <input type="text" class="form-control" id="txtPeriodo" value="@ViewData["txtDescPeriodo"]" required disabled />
          </div>
          <div class="col-md-8 center-margin center-block">
               <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                         <label>
                              Capacidad de Automoviles
                         </label>

                         <input type="number" class="form-control" id="txtMaxAutos" value="@ViewData["txtMaxAutos"]" required />
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                         <label>
                              Capacidad de Motocicletas
                         </label>
                         <input type="number" class="form-control" id="txtMaxMotos" value="@ViewData["txtMaxMotos"]" required />
                    </div>
               </div>
               <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                         <label>
                              Fecha de Inicio del Registro
                         </label>
                         <div class='input-group date' id='dtpFechaIni'>
                              <input type='text' id="txtFechaIni" class="form-control" value="@ViewData["txtFechaIni"]" required />
                              <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span> </span>
                         </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                         <label>
                              Fecha de Termino del Registro
                         </label>
                         <div class='input-group date' id='dtpFechaFin'>
                              <input type='text' id="txtFechaFin" class="form-control" value="@ViewData["txtFechaFin"]" required />
                              <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span> </span>
                         </div>
                    </div>
               </div>
               <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                         <label>
                              Fecha de Inicio de Entrega de Tarjetón
                         </label>
                         <div class='input-group date' id='dtpFechaIniEntrega'>
                              <input type='text' id="txtFechaIniEntrega" class="form-control" value="@ViewData["txtIniEntrega"]" required />
                              <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span> </span>
                         </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                         <label>
                              Fecha de Termino de Entrega de Tarjetón
                         </label>
                         <div class='input-group date' id='dtpFechaFinEntrega'>
                              <input type='text' id="txtFechaFinEntrega" class="form-control" value="@ViewData["txtFinEntrega"]" required />
                              <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span> </span>
                         </div>
                    </div>
               </div>
               <div class="form-group">
                    <button id="btnGuardar" type="submit" class="btn btn-info">Guardar</button>
               </div>

          </div>
          <div class="col-md-10 center-margin center-block">
               @Html.Partial("../Generales/TablaGeneral")
          </div>
     </form>
</div>
<script src="~/Scripts/ManejoDatos/Materiales/ActivarPeriodo.js"></script>
<link href="~/Content/Controles/Dropzone.css" rel="stylesheet" />

<div style="margin-bottom:70px" class="col-md-4 col-sm-4 col-xs-12" id="form">
    <div class="x_panel">
        <div class="x_title">
            <h3>Nuevo Sitio de Interes </h3>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                <label for="titulotxt">Título de la publicación</label>
                <input type="text" class="form-control required" name="titulo" id="titulo" placeholder="Introduce el título del Sitio" required>
            </div>
            <div class="dropzone_form col-md-12 col-sm-12 col-xs-12 form-group">
                <label>Imagen del Sitio</label>
                <form id="dropzone_imagen" style="margin-left:10px; margin-right:10px;" action="#" method="post" enctype="multipart/form-data" class="dropzone needsclick dz-clickable" required>
                    <div class="dz-default dz-message">
                        <span>Haz clic aquí o arrastra una imagenes.</span>
                    </div>
                </form>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                    <label for="link">URL del Sitio</label>
                    <input type="text" class="form-control required" name="urlsitio" id="urlsitio" placeholder="Introduce la url del sitio" required>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                <label>Publicar</label>
                <input type="checkbox" class="form-control" id="cbxPublicar">
            </div>


            <div style="margin-top:30px;" class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                <button id="btnPublicarSitio" type="submit" class="btn btn-block btn-success">Generar Sitio de Interes</button>
            </div>
        </div>
    </div>
</div>
<div style="margin-bottom:70px" class="col-md-8 col-sm-8 col-xs-12">
    @Html.Partial("../Generales/TablaJson")
</div>


<script src="~/Scripts/ManejoDatos/Gnosis/dropzone.js"></script>
<script src="~/Scripts/ManejoDatos/Pagina/Sitios_Interes.js"></script>


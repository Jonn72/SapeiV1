

<div class="page-title">

    <div class="title_left">
        <h3>Libros</h3>
    </div>
</div>
<form class="form-horizontal form-label-left" action="#" id="frmLibros" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h3>Editar</h3>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <input type="hidden" id="hidId" value="0" />
                    <input type="hidden" id="hidIdMat" value="0" />

                    <div class="form-group col-md-4 ">
                        <label for="txtClaveIsb">
                            Clave
                        </label>
                        <input type="text" class="form-control" id="txtClaveIsbn" name="txtClaveIsb" placeholder="Ingrese clave" required />
                    </div>
                    <div class="form-group col-md-4 ">
                        <label for="txtNoPaginas">
                            No. de Páginas
                        </label>
                        <input type="number" class="form-control" id="txtNoPaginas" name="txtNoPaginas" placeholder="Numero de páginas" min=" 1" />
                    </div>
                    <div class="form-group col-md-4 ">
                        <label for="txtCapitulos">
                            Capítulos
                        </label>
                        <input type="number" class="form-control" id="txtCapitulos" name="txtCapitulos" placeholder="Ingrese la descripción" min="1" />
                    </div>
                    <div class="form-group col-md-4 ">
                        <label for="txtEdicion">
                            Edicion
                        </label>
                        <input type="text" class="form-control" id="txtEdicion" placeholder="Ingrese Edición" required />
                    </div>
                     <div class="form-group col-md-4 ">
                          <label for="txtClaveLC">
                               Clasificación LC
                          </label>
                          <input type="text" class="form-control" id="txtClaveLC" name="txtClaveLC" placeholder="Ingrese clave LC" required />
                     </div>
                    <div class="col-md-12 col-sm-6">
                        <button id="btnGuardar" type="submit" class="btn btn-info">Guardar</button>
                    </div>


                </div>
            </div>
        </div>
    </div>
</form>
@Html.Partial("../Generales/TablaGeneral")

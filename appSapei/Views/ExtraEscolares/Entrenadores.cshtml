<div class="page-title">
     <div class="title_left">
          <h3>Administración <small>de Entrenadores</small></h3>
     </div>
</div>
<div class="clearfix"></div>
<div class="x_panel">
     <form class="form-horizontal form-label-left" action="#" id="frmEntrenadores" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
         <input type="hidden" id="hidId" value="0" /> 
          <div class="x_title">
               <h2>Entrenadores</h2>
               <div class="clearfix"></div>
          </div>
         <div class="">
               <div class="row form-group">
                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                         <label for="tags">
                              Nombre (s)
                         </label>
                         <input type="text" class="form-control" id="txtNombre"  placeholder="Nombre (s)" oninvalid="ValidaCampo(this, 'NOMBRE');" onblur="ValidaCampo(this, 'NOMBRE');" required />
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                         <label for="tags">
                              Apellido Paterno
                         </label>
                         <input type="text" class="form-control" id="txtPaterno" placeholder="Apellido Paterno" oninvalid="ValidaCampo(this, 'NOMBRE');" onblur="ValidaCampo(this, 'NOMBRE');" required />
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                         <label for="tags">
                              Apellido Materno
                         </label>
                         <input type="text" class="form-control" id="txtMaterno" placeholder="Apellido Materno" oninvalid="ValidaCampo(this, 'NOMBRE');" onblur="ValidaCampo(this, 'NOMBRE');" required />
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                         <label>
                              Usuario (@Html.Raw("@") + RFC)
                         </label>
                         <input type="text" class="form-control" id="txtUsuario" placeholder="Inserte sólo RFC" maxlength="14" oninvalid="ValidaCampo(this, 'INSTRUCTOR');" onblur="ValidaCampo(this, 'INSTRUCTOR');" required />
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                         <label>
                              Contraseña (8 caracteres alfanuméricos)
                         </label>
                         <input type="text" class="form-control" id="txtContrasenia" placeholder="Contraseña" maxlength="8"  required />
                    </div>
                   <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                       <label for="tags">
                          Activo
                       </label>
                       <input type="checkbox" id="chkActivo" value="ACTIVO">
                   </div>
               </div>
               <div class="form-group ">
                    <button id="btnGuardar" type="submit" class="btn btn-info">Guardar</button>
               </div>
          </div>
     </form>
</div>
@Html.Partial("../Generales/TablaGeneral")

<script src="~/Scripts/ManejoDatos/ExtraEscolares/Entrenadores.js"></script>

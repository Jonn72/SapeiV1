<div class="clearfix"></div>
<div class="x_panel">
     <form class="form-horizontal form-label-left" action="#" id="frmActividades" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
          <input type="hidden" id="hidId" value="0"/>

          <div class="col-md-10 center-margin">
               <h2 class="text-center">Actividades Extraescolares</h2>
               <div class="form-group ">
                    <label for="cboTipoActividades">
                         Seleccione el Tipo de Actividad
                    </label>
                    <select class="form-control" id="cboTipoActividades"></select>

                    <label>
                         Descripción
                    </label>
                    <input type="text" class="form-control" id="txtDescripcion" placeholder="Descripción de la Actividad" required />

                    <label>
                         Seleccione el Entrenador
                    </label>
                    <select class="form-control" id="cboEntrenadores"></select>

                    <label>
                         Capacidad
                    </label>
                    <input type="number" class="form-control" id="txtCapacidad" min="1" required />
                    @Html.Partial("../Generales/HorarioGeneral")

               </div>
               <div class="form-group ">
                    <button id="btnNuevo" type="submit" class="btn btn-info">Nuevo</button>
                    <button id="btnGuardar" type="submit" class="btn btn-info">Guardar</button>
               </div>
               <div id="divTabla">
                    @Html.Partial("../Generales/TablaGeneral")
               </div>
          </div>
     </form>
</div>
<script src="~/Scripts/ManejoDatos/ExtraEscolares/Actividades.js"></script>
<script src="~/Scripts/Componentes/daypilot-all.min.js?v=2018.2.3244"></script>

<input type="hidden" id="hidId" value="0" />
<div class="">
     <div class="page-title">
          <div class="title_left">
               <h3>Actividades Extraescolares del Periodo <small>@ViewData["txtDescPeriodo"]</small></h3>
          </div>
     </div>

     <div class="clearfix"></div>
     <form class="form-horizontal form-label-left" action="#" id="frmExtraAct" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
          <div class="row">
               <div class="col-md-4 col-sm-12 col-xs-12">
                    <div class="x_panel">
                         <div class="x_title">
                              <h2>Registro</h2>
                              <div class="clearfix"></div>
                         </div>
                         <div class="x_content">
                              <div class="form-group ">
                                   <label>
                                        Descripción
                                   </label>
                                   <input type="text" class="form-control" id="txtGrupo" placeholder="Ingrese Descripcion" required />

                                   <label for="cboTipoActividad">
                                        Tipo de Actividad
                                   </label>
                                   @{
                                        if (ViewData["cboTipoActividad"] != null)
                                        {
                                             <select class="form-control" id="cboTipoActividad">
                                                  @foreach (System.Data.DataRow dr in (ViewData["cboTipoActividad"] as System.Data.DataTable).Rows)
                                                  {
                                                       <option value="@dr.ItemArray[0].ToString().Trim()">@dr.ItemArray[1].ToString().Trim()</option>
                                                  }
                                             </select>
                                        }
                                   }

                                   <label>
                                        Capacidad
                                   </label>
                                   <input type="number" class="form-control" id="txtCapacidad" placeholder="Capacidad" required />
                                   <label for="cboEntrenador">
                                        Entrenador
                                   </label>
                                   @{
                                        if (ViewData["cboEntrenador"] != null)
                                        {
                                             <select class="form-control" id="cboEntrenador">
                                                  @foreach (System.Data.DataRow dr in (ViewData["cboEntrenador"] as System.Data.DataTable).Rows)
                                                  {
                                                       <option value="@dr.ItemArray[0].ToString().Trim()">@dr.ItemArray[1].ToString().Trim()</option>
                                                  }
                                             </select>
                                        }
                                   }
                                   <label for="Aula">
                                        Aula
                                   </label>
                                   <select class="form-control" id="cboAulas"></select>
                              </div>
                         </div>
                    </div>
               </div>
               <div class="col-md-8 col-sm-12 col-xs-12">
                    <div class="x_panel">
                         <div class="x_title">
                              <h2>
                                   Horario Semanal <small>@ViewData["txtAula"]</small>
                              </h2>
                              <div class="title_right">
                                   <div class="col-md-3 col-sm-3 col-xs-12 form-group pull-right top_search">
                                        <div class="form-inline">

                                        </div>
                                   </div>
                              </div>
                              <div class="clearfix"></div>
                         </div>
                         @Html.Partial("../Generales/HorarioSemanal")
                    </div>
               </div>
          </div>
               <div class="row">
                    <div class="col-md-4">
                         <div id="divEliminar" class="div-hide">
                              <button id="btnEliminar" type="submit" class="btn btn-block btn-danger" disabled>Eliminar</button>
                         </div>
                    </div>
                    <div class="col-md-4">
                         <button id="btnNuevo" type="submit" class="btn btn-block btn-info">Nuevo</button>
                    </div>
                    <div class="col-md-4">
                         <button id="btnGuardar" type="submit" class="btn btn-block btn-success">Guardar</button>
                    </div>
               </div>
               <div id="TablaGeneral" class="col-md-12 col-sm-12 col-xs-12">
                    @Html.Partial("../Generales/TablaGeneral")
               </div>
          
     </form>
</div>
<script src="~/Scripts/ManejoDatos/ExtraEscolares/RegistrarActividades.js"></script>
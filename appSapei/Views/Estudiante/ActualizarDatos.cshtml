<div class="clearfix"></div>
<div class="x_panel">
     <div class="x_title">
          <form class="form-horizontal form-label-left" action="#" id="frmDatosEstudiante" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
               @if (Sapei.Framework.Utilerias.SesionSapei.Sistema.Sesion.Usuario.RolUsuario == Sapei.Framework.Configuracion.enmRolUsuario.ESC) { 
               <div id="divNoControl">
                    <div class="col-md-8 center-margin">
                         <label for="txtNoControl">No. de Control:</label>
                         <input type="text" class="form-control" name="txtNoControl" id="txtNoControl" placeholder="No. de control" required>
                         <div class="form-group">
                              <button id="btnBuscar" type="submit" class="btn btn-info">Buscar</button>
                         </div>
                    </div>
               </div>
               }

               <div id="divDatos" class="div-hide">
                    <div id="divPersonales" class="div-hide">
                         @Html.Partial("../Generales/DatosPersonales")
                    </div>
                    <div class="form-group">
                         <button id="btnGuardar" type="submit" class="btn btn-info">Guardar</button>
                    </div>
               </div>
          </form>
     </div>
</div>
<script src="~/Scripts/ManejoDatos/Domicilio.js"></script>
<script src="~/Scripts/ManejoDatos/Estudiantes/Validaciones.js"></script>
<script src="~/Scripts/ManejoDatos/Estudiantes/ActualizarDatos.js"></script>
 @if (Sapei.Framework.Utilerias.SesionSapei.Sistema.Sesion.Usuario.RolUsuario == Sapei.Framework.Configuracion.enmRolUsuario.ALU)
               {
     <script type="text/javascript">
          $(document).ready(function () {
               $("#divDatos").show();
               $("#divPersonales").show();
               $('#txtNombre').prop('readonly', true);
               $('#txtPaterno').prop('readonly', true);
               $('#txtMaterno').prop('readonly', true);
               $('#txtCURP').prop('readonly', true);
               $('#txtFechaNacimiento').prop('readonly', true);
               $('#cboEstados').prop('disabled', true);
               $("#rbdHombre").attr('disabled', 'disabled');
               $("#rdbMujer").attr('disabled', 'disabled');

               Cargar('@Sapei.Framework.Utilerias.SesionSapei.Sistema.Sesion.Usuario.Usuario');
          });

     </script>
               }
<div class="x_panel">
    <div class="x_content">
        <input type="hidden" id="txtIdPrograma" value="@ViewData["id_programa"] " />
        <input type="hidden" id="txtFolio" value="@ViewData["folio"]" />
        @if (Convert.ToInt32(ViewData["numero_asesoria"]) != Convert.ToInt32(ViewData["duracion"]))
        {
            <a class="btn btn-success btn-lg" id="addAsesoria">Generar Asesoría <span class="fa fa-pencil"></span></a>
        }
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="GenerarAsesoria" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Datos de Asesoría</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmAsesoria" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-group">
                        <input type="hidden" id="txtIdAsesoria" />
                        <input type="hidden" id="txtNumeroAse" />
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <label>Tipo de asesoría</label>
                            <select class="form-control" id="cboTipo" required>
                                <option selected></option>
                                <option value="Presencial">Presencial</option>
                                <option value="Correo electrónico">Correo electrónico</option>
                                <option value="Chat">Chat</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <label>Temas a asesorar</label>
                            <textarea class="form-control" id="txtTemas" required rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <label>Solución recomendada </label>
                            <textarea class="form-control" id="txtSolucion" required rows="3"></textarea>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Guardar" />
                </form>
            </div>
        </div>
    </div>
</div>


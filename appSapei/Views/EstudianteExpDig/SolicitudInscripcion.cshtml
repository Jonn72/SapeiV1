
@using Sapei.Framework.Utilerias;
@using System.Data;

@{ string lsNombre = "";
    string lsFecha = "";

    string lsFechaRegistro = "";
    string lsEstado = "";
    string lsEstadoC = "";
    string lsCorreo = "";
    string lsTelefonoC = "";
    string lsCalle = "";
    string lsNumero = "";
    int lsCp = 0;
    string lsEntidad = "";
    string lsColonia = "";
    string lsLocalidad = "";
    string lsControl = "";
    string lsCarrera = "";
    int lsAnio_Egreso = 0;
    double lsPromedio_Procedencia = 0;
    string lsEscuela_Procedencia = " ";
    string lsPeriodoIngreso = " ";

    DataRow loFila;
    DataTable loDatos;
    if (ViewData["Datos"] != null)
    {
        loDatos = ViewData["Datos"] as System.Data.DataTable;
        loFila = (ViewData["Datos"] as System.Data.DataTable).Rows[0];

        lsControl = loFila.Field<string>("no_de_control");
        lsNombre = loFila.Field<string>("nombre_alumno");
        lsCarrera = loFila.Field<string>("carrera");
        lsPeriodoIngreso = loFila.Field<string>("desc_periodo_ingreso");
        lsFechaRegistro = loFila.Field<string>("fecha_registro");

        lsEstado = loFila.Field<string>("entidad_nac");
        lsFecha = loFila.Field<string>("fecha_nacimiento");


        lsEstadoC = loFila.Field<string>("estado_civil");
        lsCorreo = loFila.Field<string>("correo");
        lsTelefonoC = loFila.Field<string>("celular");
        lsCalle = loFila.Field<string>("calle");
        lsNumero = loFila.Field<string>("numero");
        lsCp = loFila.Field<int>("cp");
        lsEntidad = loFila.Field<string>("entidad");
        lsColonia = loFila.Field<string>("colonia");
        lsLocalidad = loFila.Field<string>("ciudad_localidad");


        lsAnio_Egreso = loFila.Field<int>("anio_egreso");
        lsPromedio_Procedencia = loFila.Field<double>("promedio_procedencia");
        lsEscuela_Procedencia = loFila.Field<string>("escuela_procedencia");
    } }

<div id="divModalSolicitudInscripcion" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                <div class="x_panel">
                    <div class="x_content ">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="text-align-center"> INSTITUTO TECNOLÓGICO DE TLÁHUAC</h4>
                            </div>
                        </div>
                        <div class="row"></div>
                        <div class="row"></div>

                        <div class="row">
                            <div class="col-md-4 col-lg-offset-1">
                                <h5>
                                    Periodo @lsPeriodoIngreso
                                </h5>
                            </div>
                        </div>

                        <div class=" col-md-12 col-xs-12 col-lg-12 col-sm-12">
                            <p class="barraTexto">SOLICITUD DE INSCRIPCIÓN</p>
                        </div>

                        <div class="row">
                            <div class="col-md-2 col-sm-4 col-xs-12">
                                <label>Nombre</label>
                            </div>
                            <div class="col-md-4 col-sm-7 col-xs-12">
                                <p>@lsNombre </p>
                            </div>
                            <input id="NoControl" value="@lsControl" hidden />

                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Fecha de Nacimiento</label>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>@lsFecha</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Estado Civil</label>
                            </div>

                            @switch (lsEstadoC)
                            {

                                case "S":
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                    <p>Soltero(a)</p>
                                </div> 
                                break;

                                case "C":
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>Casado(a)</p>
                                </div>
                                break;

                                case "D":
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>Divorciado(a)</p>
                                </div> 
                                break;

                                case "V":
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>Viudo(a)</p>
                                </div> 
                                break;

                                case "U":
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>Unión Libre</p>
                                </div>
                                break;

                             }

                        </div>

                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Domicilio</label>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>@lsCalle</p>
                            </div>

                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Colonia</label>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>@lsColonia</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Alcaldía o Municipio</label>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>@lsLocalidad</p>
                            </div>
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Entidad Federativa</label>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>@lsEntidad</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Entidad Federativa</label>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>@lsEntidad</p>
                            </div>
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Código Postal</label>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>@lsCp</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Teléfono</label>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>@lsTelefonoC</p>
                            </div>
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Correo</label>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <p>@lsCorreo</p>
                            </div>
                        </div>


                        <div class="row"></div>
                        <div class="row"></div>
                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Escuela de Procedencia</label>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <p>@lsEscuela_Procedencia</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Año de Egreso</label>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <p>@lsAnio_Egreso</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <label>Promedio</label>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <p>@lsPromedio_Procedencia</p>
                            </div>
                        </div>

                        <div class=" col-md-12 col-xs-12 col-lg-12 col-sm-12">
                            <p class="barraTexto">CARRERA</p>
                        </div>

                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <label>Carrera</label>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <p>@lsCarrera</p>
                            </div>
                        </div>

                        <div class=" col-md-12 col-xs-12 col-lg-12 col-sm-12">
                            <p>En caso de no tener todos los documentos solicitados, me comprometo a entregarlos antes del proceso de reinscripción.</p>
                        </div>

                        <div class="col-md-8 col-sm-8 col-xs-8 col-lg-8">
                            <hr />
                            <p><strong>Nombre:</strong> &nbsp; @lsNombre</p>
                        </div>

                        <div class="col-md-8 col-sm-8 col-xs-8 col-lg-8">
                            <hr />
                            <a  id="btnFirmar" class="btn btn-info" data-toggle="modal" data-target="#divModalFirmaElectronica" onclick="OcultaModal('SolicitudInscripcion');">Firmar</a>
                                <input value=""  id="Valor" hidden/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




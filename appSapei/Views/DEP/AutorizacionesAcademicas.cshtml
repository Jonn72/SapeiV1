<div class="page-title">
    <div class="col-md-8 col-sm-8 col-xs-12 form-group pull-left">
        <h3>Autorizaciones Academicas <small>@ViewData["txtDescPeriodo"]</small></h3>
    </div>
</div>
<div class="clearfix"></div>
<form class="form-horizontal form-label-left" action="#" id="frmReinscripcion" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
    <div>
        <div id="divControl" class="x_panel col-md-4 col-sm-4 col-xs-12">
            <div class="x_title">
                <div class="col-md-12 center-margin">
                    <div class="input-group">
                        <input type="text" id="txtNoControl" class="form-control" placeholder="Ingrese el no. de control" required>
                        <span class="input-group-btn">
                            <button class="btn btn-default btn-success" type="button" id="btnBuscarNoControl"><i class="fa fa-search"></i></button>
                            <button class="btn btn-default btn-dark" id="btnBuscarNoControlTabla" title="Mostrar Datos" type="button"><i class="fa fa-table"></i></button>
                        </span>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</form>
@Html.Partial("../Generales/ModalTablaDatos")
<div id="divMuestra" class="div-hide">
</div>

<script type="text/javascript">

    $(document).ready(function () {
    });

    DesactivaBotones();

    $("#btnBuscarNoControl").on('click', function (evento) {
        evento.preventDefault();
        var control = $("#txtNoControl").val().trim();
        if (!ex_no_control.test(control)) {
            MensajesToastr("info", "Solicitud Procesada", "No. de control incorrecto");
            return;
        }
        CargaDatos();
    });
   

    function CargaDatos() {
        var control = $("#txtNoControl").val().trim();
        $('#divMuestra').load('../../../DEP/DatosAlumnoAutorizacion', { psNoControl: control });
        $('#divMuestra').show();
    }

    $("#btnBuscarNoControlTabla").on('click', function (evento) {
        $('#divModal').modal("show");
        evento.preventDefault();
    })

    

</script>

<div class="clearfix"></div>
            <div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                </div>

                <div class="input-group" id="SelectCarrera">
                    @{
                        if (ViewData["lista"] != null)
                        {
                            <select class="form-control" id="cboCarrera_@Html.Raw(ViewData["Div"])" onchange="CargaEspecialidades(this);">
                                <option value="0">--Seleccione una carrera--</option>
                                @foreach (System.Data.DataRow dr in (ViewData["lista"] as System.Data.DataTable).Rows)
                                {
                                    <option value="@dr.ItemArray[0].ToString().Trim()">@dr.ItemArray[1].ToString().Trim()</option>
                                }
                            </select>
                            }
                    }
                    

                </div>
            </div>
            <div class="div-hide" id="SelectEsp_@Html.Raw(ViewData["Div"])">
                <div class="col-md-4 col-sm-4 col-xs-12"></div>
                <div class="input-group">
                    <select class="form-control" id="cboEspecialidad_@Html.Raw(ViewData["Div"])">
                    </select>
                </div>
            </div>
            <div>
                <div class="col-md-4 col-sm-4 col-xs-12"></div>
                <div class="input-group">
                    <button class="btn btn-default btn-success" type="button" id="btnBuscar_@Html.Raw(ViewData["Div"])" onclick="Buscar(@Html.Raw(ViewData["Div"]));"><i class="fa fa-search"></i></button>
                </div>
            </div>


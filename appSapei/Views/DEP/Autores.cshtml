<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Autores</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <form class="form-horizontal form-label-left" action="#" id="frmAutores" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Nuevo Registro</h3>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <input type="hidden" id="hidId" value="0" />
                        <div class="form-group col-md-4 ">
                            <label for="txtDescripcion">
                                Autor
                            </label>
                             <input type="text" class="form-control" id="txtNombre" placeholder="Ingresa el nombre" oninvalid="ValidaCampo(this, 'NOMBRE');" onblur="ValidaCampo(this, 'NOMBRE');" required />
                        </div>
                        <div class="form-group col-md-4 ">
                            <label for="txtDescripcion">
                                A. Paterno
                            </label>
                             <input type="text" class="form-control" id="txtPaterno" placeholder="Paterno" oninvalid="ValidaCampo(this, 'NOMBRE');" onblur="ValidaCampo(this, 'NOMBRE');" required />
                        </div>
                        <div class="form-group col-md-4 ">
                            <label for="txtDescripcion">
                                A. Materno
                            </label>
                             <input type="text" class="form-control" id="txtMaterno" placeholder="Materno" oninvalid="ValidaCampo(this, 'NOMBRE');" onblur="ValidaCampo(this, 'NOMBRE');" required />
                        </div>

                    </div>
                     <div class="form-group col-md-4">
                          <button id="btnGuardar" type="submit" class="btn btn-info">Guardar</button>
                     </div>
                </div>
            </div>
        </div>
    </form>

    @Html.Partial("ModalElimina")
    <script src="~/Scripts/ManejoDatos/CentroInformacion/Autores.js"></script>
</div>
@Html.Partial("../Generales/TablaGeneral")


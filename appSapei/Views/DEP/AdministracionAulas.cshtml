<script type="text/javascript">

    $("#btnBuscarAula").click(function Nuevo(evento) {
        var Aula = $("#txtAula").val();
        Cargar(Aula);
        evento.preventDefault();
    });


    function Cargar(Aula) {
        $.ajax({
            url: '../../../../DEP/RegresaAula                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     ',
            type: 'POST',
            dataType: 'json',
            data: { psAula: Aula }
        })
            .done(function (data) {
                if (typeof (data.Success) !== "undefined" && !data.Success) {

                    MensajesToastr("info", "Solicitud Procesada", "Registre la nueva Aula ");
                    $("#divRFC").hide();
                    $("#frmDatos1").show();
                    $("#txtAula2").val(Aula);
                    $("#grd").show();
                }
                else {
                    var resultado = JSON.parse(data);
                    $("#divRFC").hide();
                    $("#frmDatos1").show();
                    $("#txtAula2").val(Aula);
                    $("#txCapacidad").val(resultado.data[0].capacidad_aula);
                    $("#txtUbicacion").val(resultado.data[0].ubicacion);

                    $("#cboCruce").val($.trim(resultado.data[0].permite_cruce)).change();
                    $("#cboEstatus").val($.trim(resultado.data[0].estatus)).change();

                    $("#txtObs").val(resultado.data[0].observaciones);
                    $("#grd").show();
                }
            })
            .fail(function (data) {
                MensajesToastrErrorConexion();
            });
    }

    init_contadorTa("txtObs", "contadorTaComentario", 255);

    function init_contadorTa(idtextarea, idcontador, max) {
        $("#" + idtextarea).keyup(function () {
            updateContadorTa(idtextarea, idcontador, max);
        });

        $("#" + idtextarea).change(function () {
            updateContadorTa(idtextarea, idcontador, max);
        });

    }

    function updateContadorTa(idtextarea, idcontador, max) {
        var contador = $("#" + idcontador);
        var ta = $("#" + idtextarea);
        contador.html("0/" + max);

        contador.html(ta.val().length + "/" + max);
        if (parseInt(ta.val().length) > max) {
            ta.val(ta.val().substring(0, max - 1));
            contador.html(max + "/" + max);
        }

    }

    function Eliminar() {
        var Aula = $("#txtAula2").val();
        var opcion = confirm("Esta Seguro(a) que desea eliminar esta Aula?");
        if (opcion == true) {
            $.ajax({
                asyn: false,
                url: '../../../DEP/EliminarAula',
                type: 'POST',
                dataType: 'json',
                data: { psAula: Aula },
            })
                .done(function (data) {

                    if (typeof (data.Success) === "undefined" || !data.Success) {
                        MensajesToastr("error", "Solicitud Procesada", "Error al Guardar");
                    }
                    else {
                        MensajesToastr("success", "Solicitud Procesada", "Registro Eliminado");
                        $('#BodyPrincipal').load('../../../../DEP/AdministracionAulas');
                    }
                })
                .fail(function (data) {
                    MensajesToastrErrorConexion();
                });

            event.preventDefault();
        }
    }

    $("#btnGuardar2").click(function Nuevo(evento) {
        var Aula = $("#txtAula2").val();
        var Ubicacion = $("#txtUbicacion").val();
        var Capacidad = $("#txCapacidad").val();
        var Observaciones = $("#txtObs").val();
        var PerCruce = $("#cboCruce").val();
        var Estatus = $("#cboEstatus").val();


        $.ajax({
            asyn: false,
            url: '../../../DEP/GuardaAula',
            type: 'POST',
            dataType: 'json',
            data: { psAula: Aula, psUbicacion: Ubicacion, psCapacidad: Capacidad, psObservaciones: Observaciones, psPerCruce: PerCruce, psEstatus: Estatus },
        })
            .done(function (data) {

                if (typeof (data.Success) === "undefined" || !data.Success) {
                    MensajesToastr("error", "Solicitud Procesada", "Error al Guardar");
                }
                else {
                    MensajesToastr("success", "Solicitud Procesada", "Registro Guardado");
                    $('#BodyPrincipal').load('../../../../DEP/AdministracionAulas');
                }
            })
            .fail(function (data) {
                MensajesToastrErrorConexion();
            });

        evento.preventDefault();
    });
</script>



<div class="page-title">

    <div class="title_left">
        <h3>Revistas</h3>
    </div>
</div>
<form class="form-horizontal form-label-left" action="#" id="frmRevistas" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h3>Editar</h3>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <input type="hidden" id="hidId" value="0" />
                    <input type="hidden" id="hidIdRevistas" value="0" />

                    <div class="form-group col-md-4 ">
                        <label for="txtClaveIsb">
                            Secciones
                        </label>
                        <input type="number" class="form-control" id="txtSecciones" name="txtSecciones" placeholder="Ingrese Secciones" required min=" 1" />
                    </div>
                    <div class="form-group col-md-4 ">
                        <label for="txtNoPaginas">
                            Fecha de publicación
                        </label>
                        <input type="date" class="form-control" id="txtPublicacion" name="txtPublicacion" placeholder="Fecha de publicación" />
                    </div>
                    <div class="form-group col-md-4 ">
                        <label for="txtEdicion">
                            Edicion
                        </label>
                        <input type="text" class="form-control" id="txtEdicion" placeholder="Ingrese Edición" required />
                    </div>
                    <div class="col-md-12 col-sm-6">
                        <button id="btnGuardar" type="submit" class="btn btn-info">Guardar</button>
                    </div>


                </div>
            </div>
        </div>
    </div>
</form>

@Html.Partial("ModalElimina")
@Html.Partial("../Generales/TablaGeneral")

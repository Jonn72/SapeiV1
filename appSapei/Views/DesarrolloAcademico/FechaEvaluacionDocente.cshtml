<div class="clearfix"></div>
<form class="form-horizontal form-label-left" action="#" id="frmPeriodoEvalDoc" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
    <input type="hidden" id="hidPeriodo" value="@ViewData["txtPeriodo"]" />
    <div class="page-title">
        <div class="title_left">
            <h3>Registrar Fechas del Periodo <small>@ViewData["txtDescPeriodo"]</small></h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h4>Captura de Calificaciones</h4>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                        <label for="tags">
                            Inicio
                        </label>
                        <div class='input-group date' id='dtpFechaLiberacion'>
                            <input type="text" id="txtFechaIniCaptura" class="form-control" value="@ViewData["txtFechaInicio"]" @ViewData["vista1"] required />
                            <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar" id="f1"></span> </span>
                        </div>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                        <label for="tags">
                            Fin
                        </label>
                        <div class='input-group date' id='dtpFechaLiberacion'>
                            <input type="text" id="txtFechaFinCaptura" class="form-control" value="@ViewData["txtFechaFin"]" @ViewData["vista1"] required />
                            <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar" id="f2"></span> </span>
                        </div>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="display: @ViewData["vista2"]">
            <div class="col-md-offset-8 col-md-4">
                <button id="btnGuardar" type="submit" class="btn btn-block btn-success">Guardar Fechas</button>
            </div>
        </div>
        <div class="row" style="display: @ViewData["vista3"]">
            <div class="col-md-offset-8 col-md-4">
                <h3>No se pueden modificar fechas, ya hay evaluaciones realizadas</h3>
            </div>
        </div>
    </div>
</form>
    
<script src="~/Scripts/ManejoDatos/DesarrolloAcademico/FechaEvaluacion.js"></script>

<div class="clearfix"></div>
<form class="form-horizontal form-label-left" action="#" id="frmPeriodos" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
     <input type="hidden" id="hidPeriodo" value="@ViewData["txtPeriodo"]" />
     <div class="page-title">
          <div class="title_left">
               <h3>Periodo actual <small>  @ViewData["txtDescPeriodo"]</small></h3>
          </div>
     </div>
     <div class="clearfix"></div>
     <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">

               <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                         <div class="x_panel">
                              <div class="x_title">
                                   <h4>Periodos</h4>
                                   <div class="clearfix"></div>
                              </div>
                              <div class="x_content">
                                   <div class="col-md-3 col-sm-3 col-xs-12">
                                        <label>
                                             Periodo
                                        </label>
                                        <select class="form-control" id="cboPeriodo">
                                             <option value="1">Ene-Jun</option>
                                             <option value="3">Ago-Dic</option>
                                        </select>
                                   </div>
                                   <div class="col-md-3 col-sm-3 col-xs-12">
                                        <label>
                                             Año
                                        </label>
                                        <select class="form-control" id="cboAnio">
                                        </select>
                                   </div>
                                   <div class="col-md-3 col-sm-3 col-xs-12">

                                        <label for="cboVuelta">
                                             Vuelta
                                        </label>
                                        <select class="form-control" id="cboVuelta">
                                             <option value="1">1</option>
                                             <option value="2">2</option>
                                        </select>
                                   </div>

                                   <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label>
                                             Fecha de Examen
                                        </label>
                                        <div class='input-group date' id='dtpFechaExamen'>
                                             <input type='text' id="txtFechaExamen" class="form-control" value="@ViewData["txtFechaExamen"]" required />
                                             <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span> </span>
                                        </div>
                                   </div>
                                   <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label>
                                             Inicio
                                        </label>
                                        <div class='input-group date' id='dtpFechaIni'>
                                             <input type='text' id="txtFechaIni" class="form-control" value="@ViewData["txtIniRegistro"]" required />
                                             <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span> </span>
                                        </div>
                                   </div>
                                   <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label>
                                             Fin
                                        </label>
                                        <div class='input-group date' id='dtpFechaFin'>
                                             <input type='text' id="txtFechaFin" class="form-control" value="@ViewData["txtFinRegistro"]" required />
                                             <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span> </span>
                                        </div>
                                   </div>

                                   </div>
                         </div>
                    </div>

               </div>
               <div class="row">
                    <div class="col-md-offset-8 col-md-4">
                         <button id="btnGuardar" type="submit" class="btn btn-block btn-success">Guardar Fechas</button>
                    </div>
               </div>
          </div>
     </div>

     @Html.Partial("../Generales/TablaGeneral")
</form>

<script src="~/Scripts/ManejoDatos/Aspirantes/ActivarPeriodo.js"></script>

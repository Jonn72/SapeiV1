<link href="styles/style.css" rel="stylesheet" type="text/css">
<div class="page-title">
    <div class="title_left">
        <h3>Mantenimiento a Equipos</h3>
    </div>
</div>
<div class="x_panel">
    <div class="x_title">
        <h3>Nueva Solicitud de Mantenimiento</h3>
    </div>
    <div class="x_content">
        <button class="btn btn-success" type="button" id="nuevaSolicitud">Nueva Solicitud</button>
        <div id="divnuevasolicitud" class="div-hide">
            <div id="divchecks">
                <label>Seleccione el área a destinar</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="checkRecursosMateriales" value="RM">
                    <label class="form-check-label" for="checkRecursosMateriales"> Recursos Materiales y de Servicios</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="checkMantenimietoEquipo" value="ME">
                    <label class="form-check-label" for="checkMantenimietoEquipo">Mantenimiento de Equipo</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="checkCentroConputo" value="CC">
                    <label class="form-check-label" for="checkCentroConputo">Centro de Cómputo</label>
                </div>

                <div class="form-group">
                    <label for="txtdescripcion">Descripción del servicio solicitado o falla a reparar</label>
                    <textarea class="form-control" id="txtdescripcion" rows="4"></textarea>
                </div>
            </div>
            <button class="btn btn-success" type="button" data-toggle="modal" data-target="#vistaPreviaSolicitud" id="revisarSolicitud">Revisar Documento</button>
            <button class="btn btn-danger" type="button" id="cancelarSolicitud">Cancelar Solicitud</button>

        </div>
    </div>
</div>

@Html.Partial("../Generales/TablaGeneral")


<div class="modal fade" id="vistaPreviaSolicitud" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="txtmodespecialidad">Vista Previa Solicitud de Mantenimiento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("../Generales/VisorPDF")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" id="btnFirmarSolicitud">Aceptar y Firmar</button>
                <button type="button" class="btn btn-success" data-dismiss="modal" id="btnFirmarOrden">Aceptar y Firmar Orden</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="btnCancelarSolicitud">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@Html.Partial("../Generales/FirmaElectronica")


<script src="~/Scripts/ManejoDatos/DocumentosOficiales/SolicitudMantenimiento.js"></script>

<div class="page-title">
    <div class="title_left">
        <h3>Mantenimiento a Equipos</h3>
    </div>
</div>

@Html.Partial("../Generales/TablaGeneral")

        <div class="modal fade" id="vistaPreviaSolicitud" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="txtmodespecialidad">Vista Previa Solicitud de Mantenimiento</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @Html.Partial("../Generales/VisorPDF")
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success btnFirmarOrden" data-dismiss="modal">Firmar Orden</button>
                        <button type="button" class="btn btn-success btnLiberar" data-dismiss="modal" data-toggle="modal" data-target="#vistaOrdenMantenimiento" id="btnLiberar">Liberar Solicitud</button>
                        <button type="button" class="btn btn-success btnAsignar" data-dismiss="modal">Aceptar Solicitud</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="btnCancelarSolicitud">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>



        @Html.Partial("../Generales/FirmaElectronica")

        <div class="modal fade  bd-example-modal-lg" id="vistaOrdenMantenimiento" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="txtmodespecialidad">Liberar Orden de Mantenimiento</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="divchecks">
                            <label>Seleccione el área a destinar</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="checkInterno" value="EXT">
                                <label class="form-check-label" for="checkInterno">Externo</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="checkExterno" value="INT">
                                <label class="form-check-label" for="checkExterno">Interno</label>
                            </div>
                        </div>
                        <div class="form-group bg-tecnm">
                            <label>Tipo de Servicio</label>
                            <input type="text" class="form-control" id="tipo_servicio" placeholder="Tipo de Servicio" required />
                        </div>
                        <div class="form-group bg-tecnm">
                            <label>Asignado a</label>
                            <input type="text" class="form-control" id="asignado_a" placeholder="Asignado a" required />
                        </div>
                        <div class="form-group bg-tecnm">
                            <label for="txtTrabajoRealizado">Trabajo realizado</label>
                            <textarea class="form-control" id="txtTrabajoRealizado" rows="4"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-dismiss="modal" id="btnVisualizarOrden">Previsualizar Orden</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="btnCancelarOrden">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/Scripts/ManejoDatos/DocumentosOficiales/OrdenMantenimiento.js"></script>

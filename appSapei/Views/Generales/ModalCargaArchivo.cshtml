<div class="modal fade" id="divModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
     <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
               <div class="modal-header">
                    <h5 class="modal-title">Carga de Archivos</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
               </div>
               <div class="modal-body">
                    <div class="file-loading">
                         <input id="txtFile" name="txtFile[]" type="file" multiple>
                    </div>
               </div>
          </div>
     </div>
</div>
<script src="~/Scripts/Componentes/fileinput.js"></script>
<script src="~/Scripts/Idiomas/es.js"></script>
<script>
     $(document).ready(function () {
          $('#input-id').fileinput('reset');
     });
     $('#txtFile').fileinput({
          uploadAsync: false,
          language: 'es',
          showPreview: false,
          showCaption: true,
          showUpload: true,
          minFileCount: 1,
          maxFileCount: 1,
          uploadUrl: '../../../ControlAcceso/CargaBaseTorniquetes',
          allowedFileExtensions: ['txt', 'dat']
     });
</script>


</div>
<script type="text/javascript">

    $("#btnBuscar1").click(function Nuevo(evento) {
        RegresaPersonalDatos($("#cboPersonal").val());
        evento.preventDefault();
    });

    $("#btnCancelar").click(function Nuevo(evento) {
        $('#BodyPrincipal').load('../../../../Generales/SolicitudPersonal');
        evento.preventDefault();
    });


    function RegresaPersonalDatos(RFC) {

        Cargar(RFC);
    }

    function Cargar(RFC) {
        $.ajax({
            url: '../../../../Generales/RegresaPersonalSolicitud',
            type: 'POST',
            dataType: 'json',
            data: { psRFC: RFC }
        })
            .done(function (data) {
                if (typeof (data.Success) !== "undefined" && !data.Success) {

                    MensajesToastr("warning", "Solicitud Procesada", "El personal ya ha sido seleccionado por otro departamento. Acuda a Recursos Humanos para aclarar cualquier inconveniente.");

                }
                else {
                    var resultado = JSON.parse(data);
                    $("#divRFC").hide();
                    $("#main").show();

                    $("#txtNombre").val(resultado.data[0].nombre_empleado);
                    $("#txtPaterno").val(resultado.data[0].apellido_paterno);
                    $("#txtMaterno").val(resultado.data[0].apellido_materno);
                    $("#txtNumTarjeta").val(resultado.data[0].no_tarjeta);
                    $("#txtTipoPersonal").val(resultado.data[0].tipo_personal);

                    if (resultado.data[0].tipo_personal === "Mixto") {
                        $("#type").removeClass("div-hide");
                    }
                    else if (resultado.data[0].tipo_personal === "Base") {
                        $("#cboTContrato option[value=B").attr("selected", true);
                    }
                    else {
                        $("#cboTContrato option[value=H").attr("selected", true);
                    }
                }
            })
            .fail(function (data) {
                MensajesToastrErrorConexion();
            });
    }


    function Modificar(id) {

        $.ajax({
            url: '../../../../Generales/RegresaDatosActualizacion',
            type: 'POST',
            dataType: 'json',
            data: { psId: id }
        })
            .done(function (data) {
                if (typeof (data.Success) !== "undefined" && !data.Success) {

                    MensajesToastr("warning", "Solicitud Procesada", "El personal ya ha sido seleccionado por otro departamento. Acuda a Recursos Humanos para aclarar cualquier inconveniente.");

                }
                else {
                    var resultado = JSON.parse(data);
                    $("#divRFC").hide();
                    $("#main").show();

                    $("#hidId").val(id);
                    $("#cboPersonal option[value=" + resultado.data[0].rfc).attr("selected", true);
                    $("#txtNombre").val(resultado.data[0].nombre_empleado);
                    $("#txtPaterno").val(resultado.data[0].apellido_paterno);
                    $("#txtMaterno").val(resultado.data[0].apellido_materno);
                    $("#txtNumTarjeta").val(resultado.data[0].no_tarjeta);
                    $("#txtTipoPersonal").val(resultado.data[0].tipo_personal);

                    if (resultado.data[0].tipo_contrato === "B") {
                        $("#cboTContrato option[value=B").attr("selected", true);
                    }
                    else {
                        $("#cboTContrato option[value=H").attr("selected", true);
                    }

                    $("#btnGuardar2").addClass("div-hide");
                    $("#btnGuardar3").removeClass("div-hide");


                    $("#cboPuesto option[value='" + resultado.data[0].clave_puesto).attr("selected", true);
                    $("#txtFechaInicio").val(resultado.data[0].periodo_inicio);
                    $("#txtFechaFin").val(resultado.data[0].periodo_fin);
                }
            })
            .fail(function (data) {
                MensajesToastrErrorConexion();
            });
    }


    function Eliminar(id) {

        var opcion = confirm("Esta Seguro(a) que desea eliminar esta solicitud?");
        if (opcion == true) {
            $.ajax({
                asyn: false,
                url: '../../../Generales/EliminarSolicitud',
                type: 'POST',
                dataType: 'json',
                data: { psId: id },
            })
                .done(function (data) {

                    if (typeof (data.Success) === "undefined" || !data.Success) {
                        MensajesToastr("error", "Solicitud Procesada", "Error al Guardar");
                    }
                    else {
                        MensajesToastr("success", "Solicitud Procesada", "Registro Eliminado");
                        $('#BodyPrincipal').load('../../../../Generales/SolicitudPersonal');
                    }
                })
                .fail(function (data) {
                    MensajesToastrErrorConexion();
                });

            event.preventDefault();
        }
    }


    $("#btnGuardar2").click(function Nuevo(evento) {
        var RFC = $("#cboPersonal").val();
        var ClaveArea = $("#hidClaveArea").val();
        var Puesto = $("#cboPuesto").val();
        var PeriodoInicio = $("#txtFechaInicio").val();
        var PeriodoFin = $("#txtFechaFin").val();
        var TipoContrato = $("#cboTContrato").val();


        $.ajax({
            asyn: false,
            url: '../../../Generales/GuardaPersonalSolicitud',
            type: 'POST',
            dataType: 'json',
            data: { psRFC: RFC, psClavePuesto: Puesto, psPeriodoInicio: PeriodoInicio, psPeriodoFin: PeriodoFin, psClaveArea: ClaveArea, psTipoContrato: TipoContrato },
        })
            .done(function (data) {

                if (typeof (data.Success) === "undefined" || !data.Success) {
                    MensajesToastr("error", "Solicitud Procesada", "Error al Guardar");
                }
                else {
                    MensajesToastr("success", "Solicitud Procesada", "Registro Correcto");
                    $('#BodyPrincipal').load('../../../../Generales/SolicitudPersonal');
                }
            })
            .fail(function (data) {
                MensajesToastrErrorConexion();
            });

        event.preventDefault();
    });

    $("#btnGuardar3").click(function Nuevo(evento) {
        var ID = $("#hidId").val();
        var RFC = $("#cboPersonal").val();
        var ClaveArea = $("#hidClaveArea").val();
        var Puesto = $("#cboPuesto").val();
        var PeriodoInicio = $("#txtFechaInicio").val();
        var PeriodoFin = $("#txtFechaFin").val();
        var TipoContrato = $("#cboTContrato").val();


        $.ajax({
            asyn: false,
            url: '../../../Generales/GuardaPersonalSolicitud',
            type: 'POST',
            dataType: 'json',
            data: { psId: ID, psRFC: RFC, psClavePuesto: Puesto, psPeriodoInicio: PeriodoInicio, psPeriodoFin: PeriodoFin, psClaveArea: ClaveArea, psTipoContrato: TipoContrato, psID: ID },
        })
            .done(function (data) {

                if (typeof (data.Success) === "undefined" || !data.Success) {
                    MensajesToastr("error", "Solicitud Procesada", "Error al Guardar");
                }
                else {
                    MensajesToastr("success", "Solicitud Procesada", "Registro Actualizado");
                    $('#BodyPrincipal').load('../../../../Generales/SolicitudPersonal');
                }
            })
            .fail(function (data) {
                MensajesToastrErrorConexion();
            });

        event.preventDefault();
    });

    $('#dtpFechaInicio, #dtpFechaFin, #txtFechaInicio, #txtFechaFin').datetimepicker({
        viewMode: 'days',
        format: 'DD/MM/YYYY',
        locale: 'es',
        defaultDate: 'now'
    });

</script>

                <input type='text' id="txtTipoPersonal" value="" class="form-control" placeholder="Tipo de Personal" disabled />

            </div>
        </div>

        <div class="row">

            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <label for="tags">
                    Puesto asignado
                </label>
                @{
                    if (ViewData["Puestos"] != null)
                    {
                        <select class="form-control" id="cboPuesto">
                            @foreach (System.Data.DataRow dr in (ViewData["Puestos"] as System.Data.DataTable).Rows)
                            {
                                <option value="@dr.ItemArray[0].ToString().Trim()">@dr.ItemArray[1].ToString().Trim()</option>
                            }
                        </select>
                    }
                }
            </div>

            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <label for="tags">
                    Inicio de Labores
                </label>
                <div class='input-group date' id='dtpFechaInicio'>
                    <input type="text" id="txtFechaInicio" class="form-control" />
                    <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span> </span>
                </div>
                <div class="help-block with-errors"></div>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <label for="tags">
                    Fin de Labores
                </label>
                <div class='input-group date' id='dtpFechaFin'>
                    <input type="text" id="txtFechaFin" class="form-control" />
                    <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span> </span>
                </div>
                <div class="help-block with-errors"></div>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group div-hide" id="type">
                <label for="tags">
                    Tipo de Contrato
                </label>

                <select class="form-control" id="cboTContrato">


<div class="x_title">
    <div class="col-md-6 center-margin">
        <div class="input-group">
            <input type="text" id="txtBuscarRFC" class="form-control" placeholder="Ingrese el RFC" required>
            <span class="input-group-btn">
                <button class="btn btn-default btn-success" type="button" id="btnBuscarRFC"><i class="fa fa-search"></i></button>
                <button class="btn btn-default btn-info" id="btnBuscarRFCRegresar"  title="Regresar al menú anterior" type="button"><i class="fa fa-refresh"></i></button>
                <button class="btn btn-default btn-dark" id="btnBuscarRFCTabla" title="Mostrar Datos" type="button"><i class="fa fa-table"></i></button>
            </span>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<script>
    $(document).ready(
        $("#btnBuscarRFC").on('click', function (evento) {
            var rfc = $("#txtBuscarRFC").val().trim();
            
            if (ValidaRFC($("#txtBuscarRFC")))
                BuscaRFC(rfc);
            else
                return;
            evento.preventDefault();
        })
    );
    $("#txtBuscarRFC").keyup(function () {
        $(this).val($(this).val().toUpperCase());
    });

    function OcultaBuscaRFCRegresar(valor) {
        if (valor)
            $("#btnBuscarRFCRegresar").hide();
        else
            $("#btnBuscarRFCRegresar").show();
    }
    function OcultaBuscaRFCTabla(valor) {
        if (valor)
            $("#btnBuscarRFCTabla").hide();
        else
            $("#btnBuscarRFCTabla").show();
    }

</script>

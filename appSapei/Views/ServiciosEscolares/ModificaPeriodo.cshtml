<div class="page-title">
    <div class="col-md-8 col-sm-8 col-xs-12 form-group pull-left">
        <h3>Modificar Periodo</h3>
    </div>
</div>
<div class="clearfix"></div>
<form class="form-horizontal form-label-left" action="#" id="frmPeriodo" role="form" data-toggle="validator" method="post" accept-charset="utf-8">
    <div>
        <div id="divControl" class="x_panel col-md-4 col-sm-4 col-xs-12">
            <div class="x_title">
                <div class="col-md-12 center-margin">
                    <div class="input-group">
                        @if (ViewData["Periodos"] != null)
                        {
                            <select class="form-control" id="cboPeriodo">
                                @foreach (System.Data.DataRow dr in (ViewData["Periodos"] as System.Data.DataTable).Rows)
                                {
                                    <option value="@dr.ItemArray[0].ToString().Trim()">@dr.ItemArray[1].ToString().Trim()</option>
                                }
                            </select>
                        }
                        <span class="input-group-btn">
                            <button class="btn btn-default btn-success" type="button" id="btnBuscarPeriodo"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    $("#btnBuscarPeriodo").click(function () {
        var periodo = $("#cboPeriodo").val().trim();
        $('#frmPeriodo').load('../../../ServiciosEscolares/MantoPeriodosEscolares', { psPeriodo: periodo });
        $('#frmPeriodo').show();
        })

</script>